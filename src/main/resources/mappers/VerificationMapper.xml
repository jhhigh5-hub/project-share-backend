<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.sharebackend.mapper.VerificationMapper">
    <!-- 인증 코드 -->
    <insert id="insertCode" >
        insert into email_code (account_id, code) values (#{account_id}, #{code})
    </insert>

    <select id="selectByAccountId" parameterType="string" resultType="verification">
        select * from verification where account_id= #{accountId} order by idx desc limit 1
    </select>
</mapper>